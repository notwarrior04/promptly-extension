{
  "manifest_version": 3,
  "name": "Promptly AI Extension",
  "description": "Ask anything. Get AI responses instantly.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],     
      "run_at": "document_idle"
    }
  ]
}
